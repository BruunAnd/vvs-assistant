<UserControl x:Class="VVSAssistant.Controls.Dialogs.Views.GenerateOfferDialogView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
             xmlns:Dialog="clr-namespace:MahApps.Metro.Controls.Dialogs;assembly=MahApps.Metro"
             mc:Ignorable="d"
             MinHeight="175"
             MinWidth="350"
             Dialog:DialogParticipation.Register="{Binding}">
    <Grid Margin="0 10 0 0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" MinHeight="20" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Margin="0 5 0 0"
                   FontSize="24"
                   Text="Print tilbud"
                   TextWrapping="Wrap"/>
        <Label Grid.Row="1" Content="Navn:"/>
        <TextBox Grid.Row="2" 
                 Controls:TextBoxHelper.ClearTextButton="True"
                 Margin="0 5 0 0"
                 Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}"/>
        <Label Grid.Row="3" Content="Indledning til følgebrev:"/>
        <TextBox Grid.Row="4"
                 Margin="0 5 0 0"
                 Height="100"
                 Text="{Binding Intro, UpdateSourceTrigger=PropertyChanged}"/>

        <Label Grid.Row="5" Content="Afslutning på følgebrev:"/>
        <TextBox Grid.Row="6"
                 Margin="0 5 0 0"
                 Height="100"
                 Text="{Binding Outro, UpdateSourceTrigger=PropertyChanged}"/>
        <CheckBox Grid.Row="7"
                  Margin="0 5 0 0"
                  Content="Pris inkl. moms"
                  IsChecked="{Binding ApplyTax}"/>
        
        <StackPanel Grid.Row="7"
                    Margin="0 5 0 0"
                    HorizontalAlignment="Right"
                    Orientation="Horizontal">
            <Button x:Name="PART_AffirmativeButton"
                    Height="35"
                    Margin="0 0 5 0"
                    Command="{Binding NextCommand}"
                    Content="Gem"/>
            <Button x:Name="PART_NegativeButton"
                    Height="35"
                    Command="{Binding CloseCommand}"
                    Content="Fortryd"/>
        </StackPanel>
    </Grid>
</UserControl>